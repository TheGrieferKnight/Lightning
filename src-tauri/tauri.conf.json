{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lightning",
  "version": "0.1.3",
  "identifier": "com.lightning.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "LightningDashboard",
        "title": "Lightning Dashboard",
        "width": 800,
        "height": 600,
        "resizable": true,
        "decorations": false,
        "transparent": false,
        "url": "LightningDashboard.html"
      },
      {
        "label": "SumSpellOverlay",
        "resizable": false,
        "title": "Lightning Summoner Spell",
        "width": 160,
        "height": 268,
        "center": true,
        "decorations": false,
        "alwaysOnTop": true,
        "maximizable": false,
        "minimizable": false,
        "closable": false,
        "shadow": true,
        "url": "SummonerSpellTracker.html",
        "transparent": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "capabilities": ["window-control", "default"],
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": { "allow": ["$APPDATA/**"] }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "default": {
        "url": "sqlite:$APPDATA/app.db"
      }
    }
  }
}
