{
  "name": "lightning",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "version": "0.1.5",
  "type": "module",
  "scripts": {
    "dev:desktop": "vite -c ./apps/desktop/vite.config.ts",
    "build:web": "tsc -b packages/types packages/utils packages/ui packages/mock apps/web && tsc -p ./apps/web/tsconfig.json && vite build -c ./apps/web/vite.config.ts",
    "build:desktop": "vite build -c ./apps/desktop/vite.config.ts",
    "typecheck": "tsc -b packages/types packages/utils packages/ui packages/mock apps/web && tsc -p ./apps/web/tsconfig.json",
    "preview": "vite preview",
    "tauri": "tauri"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@tanstack/react-query": "^5.89.0",
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-opener": "^2.5.0",
    "@tauri-apps/plugin-sql": "^2.3.0",
    "@types/node": "^24.3.1",
    "babel-plugin-react-compiler": "19.1.0-rc.3",
    "lucide-react": "^0.542.0",
    "react": "19.2.0-canary-fa3feba6-20250623",
    "react-dom": "19.2.0-canary-fa3feba6-20250623",
    "react-router-dom": "^7.8.1",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@tauri-apps/cli": "^2.8.4",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^5.0.2",
    "depcheck": "^1.4.7",
    "eslint": "^9.35.0",
    "eslint-config-xo": "^0.49.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.42.0",
    "vite": "^7.1.4",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
