{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lightning",
  "version": "0.1.3",
  "identifier": "com.lightning.app",
  "build": {
    "beforeDevCommand": "bun dev:desktop",
    "devUrl": "http://localhost:1420/",
    "beforeBuildCommand": "bun run build:desktop",
    "frontendDist": "../../../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "LightningDashboard",
        "title": "Lightning Dashboard",
        "width": 1600,
        "height": 900,
        "resizable": false,
        "decorations": false,
        "transparent": false,
        "url": "./apps/desktop/LightningDashboard.html"
      }
    ],
    "security": {
      "capabilities": ["window-control", "default"],
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": { "allow": ["$APPDATA/**"] }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "default": {
        "url": "sqlite:$APPDATA/app.db"
      }
    }
  }
}
