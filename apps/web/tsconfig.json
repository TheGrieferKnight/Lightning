{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "types": ["vite/client"],
    "noEmit": true, // app doesn't emit, Vite bundles it
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [
    { "path": "../../packages/ui" },
    { "path": "../../packages/types" },
    { "path": "../../packages/utils" },
    { "path": "../../packages/client" },
    { "path": "../../packages/mock" }
  ]
}
